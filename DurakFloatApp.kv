#:kivy 1.11.1
#:import SPADES durak.SPADES
#:import HEARTS durak.HEARTS
#:import DIAMS durak.DIAMS
#:import CLUBS durak.CLUBS

<Card>:
  font_name: 'Arial'
  halign: 'center'
  font_size: '28pt'
  width: '64dp'
  height: '120dp'
  size_hint: None, None
  background_normal: ''
  background_down: ''
  background_color: (1, 1, 1, 1)
  opacity: 1 if root.state == 'normal' else .8

  canvas.before:
    PushMatrix
    Rotate:
      angle: self.rotation
      origin: self.center
  canvas.after:
    PopMatrix


FloatLayout:
  id: game_table
  # background
  canvas.before:
    Color:
      rgb: 1, 1, 1
    Rectangle:
      pos: self.pos
      size: self.size
      texture: app.texture
