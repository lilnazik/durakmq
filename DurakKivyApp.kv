#:kivy 1.11.1
#:import SPADES durak.SPADES
#:import HEARTS durak.HEARTS
#:import DIAMS durak.DIAMS
#:import CLUBS durak.CLUBS

<Card>:
  text: f'{root.suit}\n{root.nominal}\n{root.suit}'
  font_name: 'Arial'
  halign: 'center'
  color: (0.8, 0, 0, 1) if root.suit in (DIAMS, HEARTS) else (0, 0, 0, 1)
  font_size: '30pt'
  width: app.width / 12
  height: app.width / 8 * 1.6
  size_hint: None, None
  background_normal: ''
  background_down: ''
  background_color: (1, 1, 1, 1)
  opacity: 1 if root.state == 'normal' else .8


BoxLayout:
  orientation: 'vertical'
  padding: 10

  StackLayout:
    spacing: 10
    id: opp_cards

  BoxLayout:
    padding: 10
    direction: 'horizontal'
    StackLayout:
      id: field
    AnchorLayout:
      size_hint: 0.5, 1
      anchor_x: 'right'
      anchor_y: 'center'
      StackLayout:
        spacing: 10
        Card:
          id: trump_card
          nominal: '8'
          suit: DIAMS
        Card:
          counter: '28'

  StackLayout:
    spacing: 10
    id: my_cards




